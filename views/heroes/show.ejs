<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/heroes/show.css">
<%- include('../partials/nav') %>

<main>
  <h2 class="mt-4">Hero Details</h2>

  <h1 class="mt-2"><%= hero.name %></h1>

  <div class="container mt-3">
    <div class="row justify-content-center">
      <div class="card col-lg-4">
        <img src="<%= hero.imageUrl %>" alt="dota2 hero portrait">
      </div>
    </div>
  </div>

  <div class="container guide-container">
    <% hero.guides.forEach((guide) => { %>
      <div class="row">
        <div class="col">
          <h3><%= guide.name %> by <%= guide.author.name %></h3>
        </div>
        <div class="col">
          <%= guide.coreItems[0].name %>
        </div>
      </div>
    <% }) %> 
  </div>

</main>

<%- include('../partials/footer') %>
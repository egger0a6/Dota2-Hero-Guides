    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
  <% } %>
  <a class="mt-5 btn redirect-btn" href="/heroes">Go to Heroes</a>
</main>

